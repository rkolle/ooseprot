<div>
	<% if flash[:alert] %>
		<p id="notice"><%= flash[:alert] %></p>
	<% end %>
		
	<%= form_tag do %>
		<fildset>
			<legend>LogIn</legend>
				
			<div style="margin:10px; padding:10px;">
				<label for="name">Name:</label>
				<%= text_field_tag :username, params[:username] %>
			</div>
				
			<div style="margin:10px; padding:10px;">
				<label for="password">Passwort:</label>
				<%= text_field_tag :password, params[:password] %>
			</div
				
			<div style="margin:10px; padding:10px;">
				<%= submit_tag "Login" %>
			</div>
		</fildset>
	<% end %>
</div>