<h1>Listing users</h1>

<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<table>
  <tr>
    <th>Vorname</th>
    <th>Nachname</th>
    <th>Email</th>
    <th>Username</th>
		<th>Password</th>
		<th>Salt</th>
		<th>Hashed-Password
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% 
		@users.each do |user| 
		#@profile = Profile.find(user.username)
	%>
      <tr>
        <td><%= user.vorname %></td>
        <td><%= user.nachname %></td>
        <td><%= user.email %></td>
        <td><%= user.username %></td>
				<td><%= user.password %></td>
				<td><%= user.salt %></td>
				<td><%= user.hashed_password %></td>
      
        <td>
          <%= link_to 'Show', user %>
          <br/>
          <%= link_to 'Edit', edit_user_path(user) %>
          <br/>
          <%= link_to 'Destroy', user, :confirm => 'Sind Sie sicher?', :method => :delete %>
        </td>
      </tr>
  <% end %>
</table>

<br/>

<%= link_to 'New User', new_user_path %>
